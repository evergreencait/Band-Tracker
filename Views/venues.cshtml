@{
    Layout="Shared/_Layout.cshtml";
}


<h1>All venues</h1>
@if (@Model.Count == 0)
{
  <p>No venues have been added yet!</p>
}
  <h1>Here is your list of venues:</h1>
  <ul>
    @foreach (var venue in Model)
    {
       <li><a href="/venues/@venue.GetId()"><li>@venue.GetName()</a></li>
    }
  </ul>
  <form action="/venues/delete" method="post">
    <button type="submit" class="btn btn-danger btn-lg">Clear all venues</button>
  </form>

<p><a href="/venues/new">Add a new venue</a></p>
<p><a href="/venues/list">Update venues</p>
<p><a href="/">Return home</a></p>
