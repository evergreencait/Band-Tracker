@{
    Layout="Shared/_Layout.cshtml";
}


<h1>All bands</h1>
@if (@Model.Count == 0)
{
  <p>There are no bands.</p>
}
<ul>
  @foreach (var band in Model)
  {
    <li><a href="/bands/@band.GetId()">@band.GetName()</a></li>
  }
</ul>
<form action="/bands/delete" method="post">
  <button type="submit" class="btn">Clear all bands</button>
</form>
<h4><a href="/bands/new">Add a new band</a></h4>
<h4><a href="/">Return home</a></h4>
